{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "moduleResolution": "Node",
        "typeRoots": [
            "./src/@types", 
            "./node_modules/@types"
        ],
    },
    "include": ["./src/**/*"],
    "exclude": ["./dist"]
  }